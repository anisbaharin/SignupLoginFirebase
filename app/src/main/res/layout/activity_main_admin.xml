<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/pagebkg"
    tools:context=".AdminMainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/futsalname"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_marginStart="18dp"
            android:layout_marginBottom="80dp"
            android:letterSpacing="0.05"
            android:text="FutsalCourt"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBaseline_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/row1"
            app:layout_constraintEnd_toStartOf="@+id/logofutsal"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/futsalDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:text="Think quick and play quick"
            android:textColor="@color/yellow"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/logofutsal"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/futsalname" />

        <ImageView
            android:id="@+id/logofutsal"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:src="@drawable/logofutsal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toEndOf="@id/futsalname"/>

        <LinearLayout
            android:id="@+id/row1"
            android:layout_width="0dp"
            android:layout_height="175dp"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/logofutsal">

            <androidx.cardview.widget.CardView
                android:id="@+id/futsalCard"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardElevation="5dp"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/addName"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:text="Add"
                        android:textSize="20sp"
                        android:textColor="@color/yellow"
                        android:fontFamily="sans-serif"
                        android:textAlignment="center"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/addImage"/>

                    <ImageView
                        android:id="@+id/addImage"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/add"
                        android:layout_marginTop="15dp"
                        android:layout_centerHorizontal="true"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- First Row -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardElevation="5dp"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/ReadName"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:text="Read"
                        android:textSize="20sp"
                        android:textColor="@color/yellow"
                        android:fontFamily="sans-serif"
                        android:layout_marginTop="10dp"
                        android:textAlignment="center"
                        android:layout_below="@+id/readImage"/>

                    <ImageView
                        android:id="@+id/readImage"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/read"
                        android:layout_marginTop="15dp"
                        android:layout_centerHorizontal="true"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Second Row -->
        <LinearLayout
            android:id="@+id/row2"
            android:layout_width="0dp"
            android:layout_height="175dp"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/row1">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardElevation="5dp"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/updateName"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:text="Update"
                        android:textSize="20sp"
                        android:textColor="@color/yellow"
                        android:fontFamily="sans-serif"
                        android:layout_marginTop="10dp"
                        android:textAlignment="center"
                        android:layout_below="@+id/updateImage"/>

                    <ImageView
                        android:id="@+id/updateImage"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/update"
                        android:layout_marginTop="15dp"
                        android:layout_centerHorizontal="true"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardElevation="5dp"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/deleteName"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:text="Delete"
                        android:textSize="20sp"
                        android:textColor="@color/yellow"
                        android:fontFamily="sans-serif"
                        android:layout_marginTop="10dp"
                        android:textAlignment="center"
                        android:layout_below="@+id/deleteImage"/>

                    <ImageView
                        android:id="@+id/deleteImage"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/delete"
                        android:layout_marginTop="15dp"
                        android:layout_centerHorizontal="true"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row3"
            android:layout_width="0dp"
            android:layout_height="175dp"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/row2">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardElevation="5dp"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/profileName"
                        android:layout_width="400dp"
                        android:layout_height="wrap_content"
                        android:text="Profile"
                        android:textSize="20sp"
                        android:textColor="@color/yellow"
                        android:fontFamily="sans-serif"
                        android:layout_marginTop="10dp"
                        android:textAlignment="center"
                        android:layout_below="@+id/profileImage"/>

                    <ImageView
                        android:id="@+id/profileImage"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/profile"
                        android:layout_marginTop="15dp"
                        android:layout_centerHorizontal="true"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>